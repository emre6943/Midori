<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="440.0" style="-fx-background-color: #000000;"
            xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.Controller">
    <children>
        <Label fx:id="closeButton" layoutX="414.0" onMouseClicked="#closeWindow" prefHeight="32.0" prefWidth="11.0"
               stylesheets="@stylesheet.css" text="x" textAlignment="CENTER" textFill="#9dff15">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
        <Label fx:id="minButton" layoutX="386.0" layoutY="-4.0" onMouseClicked="#minimizeWindow"
               stylesheets="@stylesheet.css" text="_" textFill="#9dff15">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>
        <Label alignment="CENTER" layoutX="61.0" layoutY="205.0" prefHeight="69.0" prefWidth="330.0" text="logo"
               textFill="WHITE">
            <font>
                <Font size="36.0"/>
            </font>
        </Label>
        <JFXTextField fx:id="unField" alignment="CENTER" focusColor="#9dff15" layoutX="61.0" layoutY="275.0"
                      prefHeight="42.0" prefWidth="330.0" promptText="username/email"
                      style="-fx-background-color: #fff;" unFocusColor="BLACK"/>
        <JFXPasswordField fx:id="pwField" alignment="CENTER" focusColor="#9dff15" layoutX="61.0" layoutY="317.0"
                          prefHeight="42.0" prefWidth="330.0" promptText="password" style="-fx-background-color: #fff;"
                          unFocusColor="BLACK"/>
        <JFXButton fx:id="signInButton" layoutX="116.0" layoutY="384.0" onMouseClicked="#login" prefHeight="50.0"
                   prefWidth="220.0" style="-fx-background-color: #fff;" stylesheets="@stylesheet.css" text="Sign In"/>
        <Hyperlink alignment="CENTER" layoutX="116.0" layoutY="450.0" onMouseClicked="#goToSignup" prefWidth="220.0"
                   text="Don't have an account?" textAlignment="CENTER" textFill="#9dff15"/>
        <Hyperlink alignment="CENTER" layoutX="116.0" layoutY="474.0" prefWidth="220.0" text="Forgot password?"
                   textAlignment="CENTER" textFill="#9dff15"/>
    </children>
</AnchorPane>
